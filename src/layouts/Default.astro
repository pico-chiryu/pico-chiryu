---
import { markdownify } from "@/lib/utils/textConverter";

const { data } = Astro.props;
const { title } = data.data;
const { Content } = await data.render();
---

<section class="section">
  <div class="container mt-8">
    <h1 set:html={markdownify(title)} class="h2 page-heading mb-0" />
    <div class="content">
      {title === "ごあいさつ" && (
        <div class="flex justify-center w-1/2 mx-auto">
       
          <img src="../../../images/usami.png" class="max-w-full h-auto" alt="塾長画像">
        </div>
      )}
      
      
      <Content />
    </div>
  </div>
</section>
